{% extends 'backoffice/base_admin.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main_page %}
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper login-container d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-3 mx-auto">
                    <div class="auth-form-light text-left py-3 px-4 px-sm-3">
                        <div class="brand-logo text-center">
                            <img src="{{ asset('images/logo/Logo-full-dark.png') }}" class="text-center"/>
                        </div>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                        <form class="pt-3" method="post">
                            <div class="form-group">
                                <input type="text" name="username" class="form-control form-control-lg" placeholder="Nom d'utilisateur">
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" class="form-control form-control-lg" placeholder="Mots de passe">
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="mt-3">
                                <button type="submit" class="btn btn-block login-btn btn-primary btn-sm w-100 font-weight-medium auth-form-btn">Connexion</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" checked name="_remember_me" class="form-check-input">
                                        Se souvenir de moi
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-black">Mots de passe oubli√© ?</a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
{% endblock %}
